<style>
  .profile-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-section {
    text-align: center;
    margin-bottom: 32px;
  }

  .hero-section h1 {
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 16px 0;
    color: var(--colorNeutralForeground1);
  }

  .hero-section h3 {
    font-size: 20px;
    font-weight: 500;
    margin: 0;
    color: var(--colorNeutralForeground2);
  }

  .about-section {
    margin: 24px 0;
  }

  .about-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .about-section li {
    padding: 8px 0;
    font-size: 18px;
    color: var(--colorNeutralForeground2);
    line-height: 1.6;
  }

  .about-section a {
    color: var(--colorBrandForeground1);
    text-decoration: none;
    font-weight: 600;
  }

  .about-section a:hover {
    text-decoration: underline;
  }

  .contact-section {
    margin: 24px 0;
  }

  .contact-section h3 {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 16px 0;
    color: var(--colorNeutralForeground1);
  }

  .contact-links {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    align-items: center;
  }

  .contact-links a,
  .contact-links span {
    display: inline-block;
    transition: transform 100ms ease;
  }

  .contact-links a:hover {
    transform: translateY(-2px);
  }

  .contact-links img {
    height: 24px;
  }

  .stats-section {
    margin: 24px 0;
  }

  .stats-section h3 {
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 20px 0;
    text-align: center;
    color: var(--colorNeutralForeground1);
  }

  .stats-grid {
    display: flex;
    gap: 5px;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: flex-start;
  }

  .stats-grid img {
    max-width: 100%;
    height: 150px;
  }

  fluent-divider {
    margin: 16px 0;
  }

  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 24px;
    }

    .hero-section h3 {
      font-size: 16px;
    }

    .stats-grid {
      flex-direction: column;
      gap: 24px;
    }

    .stats-grid img {
      height: auto;
      max-width: 100%;
    }

    .about-section li {
      font-size: 14px;
    }
  }
</style>
